<% layout("./layouts/layout.eta") %>

<h1>Login to the service!</h1>

<form method="POST" action="/auth/login">
    Email:<br/>
    <input type="email" name="email"/><br/>
    Password:<br/>
    <input type="password" name="password"/><br/>
    <input type="submit" value="Login"/>
</form>

<% if (it.feedback) { %>
    <p><%= it.feedback %></p>
<% } %>