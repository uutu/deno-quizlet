<% layout("./layouts/layout.eta") %>

<h1>Quiz!</h1>

<h2>Available topics for a quiz</h2>

<% if (it.availableTopics && it.availableTopics.length > 0) { %>

<ul>
<% it.availableTopics.forEach(topic => { %>
    <li>
        <a href="/quiz/<%= topic.id %>"><%= topic.name %></a>          
    </li>
<% }); %>
</ul>

<% } else { %>

<p>None available.</p>

<% } %>

